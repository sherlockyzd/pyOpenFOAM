FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          PETSc;          // 使用PETSc求解器
        petsc_solver    gmres;          // GMRES Krylov方法 (gmres, cg, bicgstab)  
        preconditioner  gamg;           // 代数多重网格预处理器 (gamg, ilu, jacobi)
        tolerance       1e-6;
        relTol          0.01;
        maxIter         1000;
    }

    U
    {
        solver          PETSc;
        petsc_solver    bicgstab;       // BiCGSTAB对非对称矩阵效果好
        preconditioner  ilu;            // ILU预处理器
        tolerance       1e-6;
        relTol          0.1;
        maxIter         1000;
    }

    T
    {
        solver          PETSc;
        petsc_solver    bicgstab;       // BiCGSTAB对非对称矩阵效果好
        preconditioner  ilu;            // ILU预处理器
        tolerance       1e-6;
        relTol          0.1;
        maxIter         1000;
    }
}

